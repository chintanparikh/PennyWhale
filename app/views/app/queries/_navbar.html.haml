.container{style:"margin-top:40px"}
  .row
    .col-lg-1
    .col-lg-7  
      %h4
        = link_to image_tag(asset_path('nav-logo.png')), app_root_path
        = link_to "PennyWhale", app_root_path
    .col-lg-1{style:"margin-top:20px"}
      = link_to "Help", app_queries_help_path
    -if current_user
      .col-lg-1{style:"margin-top:20px;margin-right:15px"}
        = link_to "Account", edit_user_registration_path
    .col-lg-1{style:"margin-top:20px"}
      - if current_user.nil?
        = link_to "Login", user_session_path 
      - else
        = link_to "Logout", destroy_user_session_path, method: :delete
