
<%= render :partial => '/app/queries/navbar' %>

<div class="container" style="margin-top:50px">
    <div class="row">
    	<div class="span3">
    	</div>
		<div class="span6">

		<div id="legend">
	      <legend class="">Log-In</legend>
	    </div>
			
				<%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>

				  <div class="control-group">
					  <%= f.label :email, class:"control-label" %><br />
					  <%= f.email_field :email, autofocus: true, class:"input-lg", style:"height:30px;width:300px" %>
				  </div>


				  <div class="control-group"><%= f.label :password %><br />
				    <%= f.password_field :password, autocomplete: "off", class:"input-lg", style:"height:30px;width:300px" %></div>

				  <% if devise_mapping.rememberable? -%>
				    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
				  <% end -%>

				  <br/>
				  
				  <div><%= f.submit "Sign in", class:"btn btn-success" %></div>
				<% end %>

				<br/>

				<%= render "devise/shared/links"  %>

		</div>
		<div class="span3">
    	</div>
	</div>
</div>


