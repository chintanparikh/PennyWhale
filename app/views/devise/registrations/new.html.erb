
<%= render :partial => '/app/queries/navbar' %>

<div class="container" style="margin-top:-30px">
    <div class="row">
    	<div class="span2">
    	</div>

		<div class="span5">

		<h4>Sign-up</h4>
		<br/>
			
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			  <%= devise_error_messages! %>

			  <div class="control-group">
				  <%= f.label :email, class:"control-label" %><br />
				  <%= f.email_field :email, autofocus: true, class:"input-lg", style:"height:30px;width:300px" %>
			  </div>


			  <div class="control-group"><%= f.label :password %><br />
			    <%= f.password_field :password, autocomplete: "off", class:"input-lg", style:"height:30px;width:300px" %></div>

			  <div class="control-group"><%= f.label :password_confirmation %><br />
			    <%= f.password_field :password_confirmation, autocomplete: "off", class:"input-lg", style:"height:30px;width:300px" %></div>

			  <div><%= f.submit "Sign up", class:"btn btn-success" %></div>
			<% end %>

			<%= render "devise/shared/links"  %>


	    

		</div>
		<div class="span-3" style="margin-top:7px">
				<div class="row" align="center">
					<div class="panel panel-info" style="width:300px;">
			                <div class="panel-heading">
			                    <h4 class="text-center">
			                        PRO PLAN</h4>
			                </div>
			                <div class="panel-body text-center">
			                    <p class="lead">
			                        <strong>$50 / month</strong></p>
			                </div>
			                <ul class="list-group list-group-flush text-center">
			                    <li class="list-group-item"><i class="icon-ok text-danger"></i> Unlimited usage</li>
			                    <li class="list-group-item"><i class="icon-ok text-danger"></i> Feature/data requests</li>
			                    <li class="list-group-item"><i class="icon-ok text-danger"></i> 24/7 support</li>
			                </ul>

			            </div>
	    		</div>
	    </div>


	    

		
		<div class="span2">
    	</div>
	</div>
</div>


