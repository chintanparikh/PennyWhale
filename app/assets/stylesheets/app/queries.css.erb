html, body {
	/*height: 100%;*/
}

body {
	background-image: url(<%= asset_path('query-background.png') %>);
	background-repeat: no-repeat;
	background-position: 10% 0;
}

.container.vertical-center {
	position:fixed;
	top:50%;
	left:50%;
	margin-top:-70px;
	margin-left:-570px
}

.form-control.input-lg {
	border-radius:0px; 
	box-shadow: inset 0 3px 0 #BEBEBE; 
	border: 1px solid #CECECE; 
	border-top: 1px solid #BEBEBE; 
	font-size: 15px;
	height: 46px;
}

.btn-info.btn-lg.btn-submit {
	display:block;
	width:100%;
}

.navbar {
	margin-top: 20px;
}

.navbar a {
	font-family: Montserrat, sans-serif;
	line-height: 50px;
	margin-left: 20px;
	font-size: 1em;
	color: #ffffff;
	padding: 8px 12px 7px;
	margin-top: 9px;
}

.autocomplete-suggestions {
	color: #555555;
	background-color: #eeeeee;
	border-color: #e2e2e2;
	overflow: scroll;
	width: 10px;
}

.autocomplete-suggestion {
	padding: 5px 10px;

}

.autocomplete-selected {
	background-color: #75caeb;
	color: #ffffff;
}

.fill {
	min-height: 100%;
	margin-bottom: 5%;
}

#execute-container #query-compute-button {
	width: 100%;
}

#query-answer-panel {
	border: 1px solid #e7e7e7;
	box-shadow: 0px 2px 4px rgba(0,0,0,0.05);
}

#execute-container {
	margin-top: 5%;
}

#query-answer-panel ul {
	list-style-type: none;
}

#main-query-info ul{
	text-align: left;
	margin-left: 0;
	font-size: 1.5em;
}

#main-query-info ul li {
	margin: 2% 0;
}

.nav.navbar-nav.navbar-right li button {
	margin-right: 10px;
	margin-top: 8px;
}

.nav.navbar-nav.navbar-right li:last-child {
	margin-right: 20px;
}

#logo-text {
	border-width: 0 1px 4px 1px;
	border-style: solid;
	border-color: #117AA3;
}